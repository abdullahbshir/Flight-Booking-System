    <div class="book">
        <img src="./images/flight-hero.jpg" alt="" class="img-fluid"> 

        <div class="booking-container">
            <h2>Complete the Following</h2>
            <form action="/booking" method="post" class="flight-form" id="bookingForm" onsubmit="return validateForm(event)">
                <div class="form-row">
                    <input type="text" name="user_name" id="user_name" placeholder="User Name..." required>
                    <select name="source_city" id="source_city" required>
                        <option value="" disabled selected>Select Source City</option>
                        <option value="Karachi">Karachi</option>
                        <option value="Lahore">Lahore</option>
                        <option value="Islamabad">Islamabad</option>
                        <option value="Rawalpindi">Rawalpindi</option>
                        <option value="Faisalabad">Faisalabad</option>
                        <option value="Multan">Multan</option>
                        <option value="Hyderabad">Hyderabad</option>
                        <option value="Peshawar">Peshawar</option>
                    </select>
                </div>
                <div class="form-row">
                    <select name="designated_city" id="designated_city" required>
                        <option value="" disabled selected>Select Designated City</option>
                        <option value="Karachi">Karachi</option>
                        <option value="Lahore">Lahore</option>
                        <option value="Islamabad">Islamabad</option>
                        <option value="Rawalpindi">Rawalpindi</option>
                        <option value="Faisalabad">Faisalabad</option>
                        <option value="Multan">Multan</option>
                        <option value="Hyderabad">Hyderabad</option>
                        <option value="Peshawar">Peshawar</option>
                    </select>
                    <input type="date" name="departed_date" id="departed_date" required>
                </div>
                <div class="form-row">
                    <select name="Class" id="Class" required>
                        <option value="" disabled selected>Select Your Class...</option>
                        <option value="ECONOMY">ECONOMY</option>
                        <option value="BUSINESS">BUSINESS</option>
                        <option value="First">First</option>
                    </select>
                    <input type="number" name="number_of_people" id="number_of_people" placeholder="Number of People" required max="6", min="0" >

                </div>
                <button type="submit" id="booked" class="btn btn-primary">Book Flight</button>
                  </form>
        </div>
    </div>

    <div class="captcha-container" id="captcha-container">
      <div class="captcha-row">
          <input type="checkbox" id="captcha" class="captcha-checkbox" aria-label="I am not a robot">
          <label for="captcha" class="captcha-label">
              <img src="images/download.png" alt="Robot Icon" id="imaa">
              I am not a robot
          </label>
      </div>
  </div>
 
    
